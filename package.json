{
  "name": "movers_v3",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "predev": "node scripts/setup-pdfkit.js",
    "dev": "next dev --port 3001",
    "prebuild": "node scripts/update-build-info.js && node scripts/setup-pdfkit.js",
    "build": "next build",
    "start": "node server.js",
    "start:next": "next start",
    "postinstall": "node scripts/setup-pdfkit.js || true",
    "lint": "eslint",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "smoke:api": "node scripts/smoke.js",
    "worker": "node scripts/worker.js",
    "bullboard": "node scripts/bullboard.js",
    "setup:env": "node setup-env.js",
    "check:env": "node -e \"console.log('OpenAI:', process.env.OPENAI_API_KEY ? '✅' : '❌'); console.log('Claude:', process.env.CLAUDE_API_KEY ? '✅' : '❌'); console.log('DB:', process.env.DATABASE_URL ? '✅' : '❌');\"",
    "check:all": "./scripts/check-all.sh",
    "check:quick": "./scripts/check-quick.sh",
    "check:queue": "node scripts/test-queue.js",
    "check:sse": "node scripts/test-sse.js",
    "check:ui": "node scripts/test-ui.js",
    "db:push": "npx prisma db push",
    "db:generate": "npx prisma generate",
    "db:reset": "npx prisma db push --force-reset",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:migrate:deploy": "npx prisma migrate deploy",
    "prisma:studio": "npx prisma studio",
    "prisma:generate": "npx prisma generate",
    "check:neon": "node scripts/check-neon-config.js",
    "migrate:neon": "node scripts/check-neon-config.js && npm run prisma:generate && npm run prisma:migrate"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@aws-sdk/client-s3": "^3.621.0",
    "@aws-sdk/s3-request-presigner": "^3.621.0",
    "@bull-board/api": "^5.10.2",
    "@bull-board/express": "^5.10.2",
    "@prisma/client": "^6.16.3",
    "@types/pdfkit": "^0.17.3",
    "bullmq": "^5.1.0",
    "express": "^4.18.2",
    "framer-motion": "^12.23.22",
    "ioredis": "^5.3.2",
    "next": "15.5.4",
    "openai": "^5.23.0",
    "pdfkit": "^0.17.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "^0.34.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "jest": "^30.2.0",
    "jsdom": "^23.0.1",
    "prisma": "^6.16.3",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.4",
    "typescript": "^5",
    "vitest": "^1.0.4"
  }
}
